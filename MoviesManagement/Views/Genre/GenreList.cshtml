@model IEnumerable<MoviesManagement.Models.Domain.Genre>
@{
}

<div class="tbl-container">
    <h2>Genres</h2>

    <table>
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GenreName</td>
                <td>
                    <a href="@Url.Action("Edit", "Genre", new { id = item.Id })" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Are you sure?')" href="@Url.Action("Delete", "Genre", new { id = item.Id })" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }

    </table>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <a asp-controller="Genre" asp-action="Add" class="btn btn-sec">Add New</a>
    </div>
</div>