@model MoviesManagement.Models.DTO.MovieListVm
@{
}

<section class="search-bar">
    <form method="get" asp-action="Index">
        <input type="text" name="term" placeholder="search here">
        <button type="submit"><i class="fa fa-search"></i></button>
        <a class="btn btn-default" asp-action="Index">All</a>
    </form>
</section>

<section class="movies">
    @foreach (var movie in Model.MovieList)
    {
        <div class="movie-card">
            <a asp-action="MovieDetail" asp-route-id="@movie.Id">
                <div class="movie-image">
                    <img src="/Uploads/@movie.MovieImage">
                </div>
                <div class="movie-info">
                    <h4>@movie.Title</h4>
                    <h4>@movie.GenreNames</h4>
                </div>
            </a>
        </div>
    }
</section>

<div class="pagination">
    <a href="#">&laquo;</a>
    <a href="#">1</a>
    <a class="active" href="#">2</a>
    <a href="#">3</a>
    <a href="#">4</a>
    <a href="#">5</a>
    <a href="#">6</a>
    <a href="#">&raquo;</a>
</div>