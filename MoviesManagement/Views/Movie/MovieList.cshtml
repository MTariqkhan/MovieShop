@model MoviesManagement.Models.DTO.MovieListVm
@{
}

<div class="tbl-container">
    <h2>Movies</h2>

    <table>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>ReleaseYear</th>
            <th>Image</th>
            <th>Cast</th>
            <th>Director</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model.MovieList)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.GenreNames</td>
                <td>@item.ReleaseYear</td>
                <td><img style="height:60px;width:80px" src="/Uploads/@item.MovieImage" /></td>
                <td>@item.Cast</td>
                <td>@item.Director</td>
                <td>
                    <a href="@Url.Action("Update", "Movie", new { id = item.Id })" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Are you sure?')" href="@Url.Action("Delete", "Movie", new { id = item.Id })" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }

    </table>
    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }
    <div class="input-container">
        <a asp-controller="Movie" asp-action="Add" class="btn btn-sec">Add</a>
    </div>
</div>